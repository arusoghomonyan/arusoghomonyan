#include <stdio.h>

int main() {
		float x=0;
		float y=0;
		char operation;

		printf("Enter x: ");
		scanf("%f", &x);
		printf("Enter y: ");
		scanf("%f", &y);
		printf("Enter the operation: ");
		scanf(" %c", &operation); // the space

	if(operation == '+'){
		printf("%f", x + y);
}	if(operation == '-'){
		printf("%f",  x - y);
} if(operation == '*' ){
		printf("%f", x * y);
} if(operation == '/'){
		printf("%f", x / y);
}   
		return 0;
}


