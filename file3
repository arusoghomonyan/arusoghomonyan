#include <stdio.h>

int main() {
	float num1 = 0;
	float num2 = 0;
	char operation;

		printf("Enter num1: ");			
    	scanf("%f", &num1);
		printf("Enter num2: ");
	    scanf("%f", &num2);
		printf("Enter the operation: ");
	   	scanf(" %c", &operation);

 if(operation == '+'){
  printf("%f", num1 + num2);
} 
 else if(operation == '-'){
  printf("%f", num1 - num2);
} 
 else if(operation == '*'){
  printf("%f %f %f", num1 * num2, num1 * num1, num2 * num2);
} 
 else if(operation == '/' && num2 != 0){
  printf("%f", num1 / num2);
} 
 else {
  printf("Error");
}
return 0;
}
